@section Title {
Edite
}


@model Articolo

<h2>Modifica prodotto @Model.Name</h2>

<form class="row g-3" asp-controller="Articolo" asp-action="Edit" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="col-md-6">
        <label asp-for="@Model.Name" class="form-label"></label>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Description" class="form-label"></label>
        <input type="text" class="form-control" asp-for="@Model.Description">
    </div>
    <div class="col-12">
        <label asp-for="@Model.Price" class="form-label"></label>
        <input type="text" class="form-control" asp-for="@Model.Price">
    </div>
    <div class="col-12">
        <label asp-for="@Model.ImgCover" class="form-label"></label>
        <input type="text" class="form-control" asp-for="@Model.ImgCover">
    </div>
    <div class="col-12">
        <label asp-for="@Model.ImgDetails[0]" class="form-label"></label>
        <input type="text" class="form-control" asp-for="@Model.ImgDetails[0]">
    </div>
    <div class="col-12">
        <label asp-for="@Model.ImgDetails[1]" class="form-label"></label>
        <input type="text" class="form-control" asp-for="@Model.ImgDetails[1]">
    </div>

    <div class="col-12">
        <button class="btn btn-outline-success">Modifica</button>
    </div>
</form>